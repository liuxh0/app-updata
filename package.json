{
  "name": "app-updata",
  "version": "0.1.1",
  "description": "Painless migrating your app's local data from version to version",
  "author": "Xinhu Liu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liuxh0/app-updata"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "npm test && npm run tslint && npm run build",
    "test": "nyc mocha src/*.spec.ts src/**/*.spec.ts && nyc report --reporter=text-lcov > coverage/coverage.lcov",
    "build": "rm -rf dist && tsc -p tsconfig.dist.json",
    "tslint": "tslint -p tsconfig.json"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.2",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "sinon": "^6.1.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/**/*.spec.ts",
      "src/index.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  }
}
